      // "restartInterval": 30  // Uncomment to auto-restart every 30 minutes
    },
    
    // JSON
    {
      "extensions": ["json","jsonc"],
      "command": ["npx","--","vscode-json-languageserver","--stdio"]
      // "restartInterval": 30  // Uncomment to auto-restart every 30 minutes
    },
    
    // HTML
